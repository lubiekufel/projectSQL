<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="projectSQL.MainPage">
    <ContentPage.MenuBarItems>
        <MenuBarItem Text="Opcje">
            <MenuFlyoutItem Text="O programie" Clicked="About_Clicked"/>
            <MenuFlyoutItem Text="Dodaj kontakt" Clicked="Add_Clicked"/>
            <MenuFlyoutItem Text="Usuń zaznaczone kontakty" Clicked="DeleteMany_Clicked"/>
        </MenuBarItem>
        <MenuBarItem Text="Pomoc">
            <MenuFlyoutItem Text="Otwórz pomoc" Clicked="Help_Clicked"/>
        </MenuBarItem>
    </ContentPage.MenuBarItems>
    <ScrollView>
        <Grid RowDefinitions="auto, *, auto, auto" ColumnDefinitions="*">
            <Grid Grid.Row="0" Grid.Column="0" RowDefinitions="*" ColumnDefinitions="*, auto">
                <Entry Grid.Row="0" Grid.Column="0" x:Name="SearchEntry" TextChanged="Search_TextChanged" Text="" Placeholder="Wyszukaj kontakt"></Entry>
                <Button Grid.Row="0" Grid.Column="1" Text="Dodaj kontakt" Clicked="Add_Clicked"></Button>
                
            </Grid>
            <ListView Grid.Column="0" Grid.Row="1" ItemsSource="{Binding contacts}" Margin="30">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid ColumnDefinitions="auto,*, *, *, auto, auto" RowDefinitions="*">
                                <CheckBox IsChecked="{Binding IsChecked}"></CheckBox>
                                <Label Grid.Column="1" Grid.Row="0" Text="{Binding Name}"></Label>
                                <Label Grid.Column="2" Grid.Row="0" Text="{Binding Surname}"></Label>
                                <Label Grid.Column="3" Grid.Row="0" Text="{Binding Phone}"></Label>
                                <Button Grid.Column="4" Grid.Row="0" Text="Modify" Clicked="Modify_Clicked"></Button>
                                <Button Grid.Column="5" Grid.Row="0" Text="Delete" Clicked="Delete_Clicked"></Button>
                                
                            </Grid>
                            <ViewCell.ContextActions>
                                <MenuItem Text="Modify" Clicked="MenuItemModify_Clicked" CommandParameter="{Binding .}" />
                                <MenuItem Text="Delete" Clicked="MenuItemDelete_Clicked" CommandParameter="{Binding .}" IsDestructive="True"/>
                            </ViewCell.ContextActions>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Grid Grid.Row="2" Grid.Column="0" RowDefinitions="*" ColumnDefinitions="auto, *, auto">
                <Button Grid.Row="0" Grid.Column="0" Clicked="PagLeft_Clicked" x:Name="PagLeft" Text="&lt;"></Button>
                <Entry HorizontalTextAlignment="Center" Grid.Row="0" Grid.Column="1" x:Name="PagNumber" Text="1" TextChanged="PagNumber_TextChanged"></Entry>
                <Button Grid.Row="0" Grid.Column="2" Clicked="PagRight_Clicked" x:Name="PagRight" Text="&gt;"></Button>
            </Grid>
        </Grid>
    </ScrollView>
</ContentPage>
